<% if cat.persisted? %>
    <% if cat.image.attached? %>
        <%= image_tag cat.image, style: "width: 120px; display: block" %> 
    <% end %>
    <br>
<% end %>

<%= form_with model: cat do |cat_form| %> 
    <%= label(:cat_form, :Name) %>
    <%= cat_form.text_field :name %>
    <br><br>
    <%= label(:cat_form, :Photo) %>
    <%= file_field(:cat, :image)%>
    <br><br>
    <%= label(:cat_form, :Sex) %>
    <%= label(:cat_form, :M) %>
    <%= radio_button("cat", "sex", "M") %>
    <%= label(:cat_form, :F) %>
    <%= radio_button("cat", "sex", "F") %>
    <br><br>
    <%= label(:cat_form, :Color) %>
    <%= select(:cat, :color, cat_colors, { prompt: "Select Color" }) %>
    <br><br>
    <%= label(:cat_form, :Birth_Date) %>
    <%= cat_form.date_field :birth_date %>
    <br><br>
    <%= label(:cat_form, :Description) %>
    <%= cat_form.text_area :description %>
    <br><br>
    <%= cat_form.submit %>
<% end %>
    
